# Rust API Gateway Configuration

# Server
RUST_API_PORT=8080
RUST_LOG=info

# Python Services URLs
EMBEDDING_SERVICE_URL=http://localhost:8001
INGESTION_SERVICE_URL=http://localhost:8002
SEARCH_SERVICE_URL=http://localhost:8003
PREDICTION_SERVICE_URL=http://localhost:8004
OPINION_SERVICE_URL=http://localhost:8005
OCR_SERVICE_URL=http://localhost:8000

# Qdrant (optional direct access)
QDRANT_URL=http://localhost:6333

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_MS=1000
